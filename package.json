{
  "name": "vite-electron-react-boilerplate",
  "version": "1.0.0",
  "description": "Next Generation Tooling for Building Robust Desktop Apps❤️",
  "keywords": [
    "Electron",
    "React",
    "Vitejs",
    "Typescript",
    "JavaScript",
    "Html",
    "Css",
    "Sass",
    "Eslint",
    "Prettier",
    "Vite",
    "HMR",
    "Hot reload",
    "Vscode debug"
  ],
  "homepage": "https://github.com/stackoutput-com/vite-electron-react-boilerplate#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stackoutput-com/vite-electron-react-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/stackoutput-com/vite-electron-react-boilerplate/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Ajay Kanniyappan",
    "email": "ajaykanniyappan@gmail.com",
    "url": "https://ajaykanniyappan.com"
  },
  "main": "app/dist/main/main.js",
  "scripts": {
    "build:debug": "npm run clean:build && npm run debug && electron-builder build",
    "build": "npm run clean:dist && cross-env NODE_ENV=production ELECTRON_ENV=production vite build --config configs/vite.config.ts",
    "clean:build": "ts-node configs/clean.ts --build",
    "clean:dist": "ts-node configs/clean.ts --dist",
    "clean": "ts-node configs/clean.ts --clean",
    "debug": "npm run clean:dist && cross-env NODE_ENV=production ELECTRON_ENV=debug vite build --config configs/vite.config.ts",
    "dev": "cross-env NODE_ENV=development ELECTRON_ENV=debug vite --config configs/vite.config.ts",
    "lint": "eslint --fix .",
    "make:linux": "npm run clean:build && npm run build && electron-builder build -l",
    "make:mac": "npm run clean:build && npm run build && electron-builder build -m",
    "make:win": "npm run clean:build && npm run build && electron-builder build -w",
    "prepare": "husky install",
    "prod:debug": "npm run debug && electron .",
    "prod": "npm run build && electron .",
    "start": "ts-node configs/check-port.ts && npm run clean:dist && npm run dev"
  },
  "dependencies": {
    "electron-log": "^4.4.8",
    "electron-store": "^8.1.0",
    "electron-updater": "^5.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.4.3"
  },
  "devDependencies": {
    "@types/detect-port": "^1.3.2",
    "@types/react": "^18.0.24",
    "@types/react-dom": "^18.0.8",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.42.1",
    "@vitejs/plugin-react": "^2.2.0",
    "chalk": "^4.1.2",
    "cross-env": "^7.0.3",
    "detect-port": "^1.5.1",
    "electron": "^21.2.3",
    "electron-builder": "^23.6.0",
    "electron-devtools-installer": "^3.2.0",
    "eslint": "^8.27.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.0",
    "prettier": "^2.7.1",
    "sass": "^1.56.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.6.4",
    "vite": "^3.2.3",
    "vite-plugin-electron": "^0.10.4",
    "vite-plugin-environment": "^1.1.3",
    "vite-tsconfig-paths": "^3.5.2"
  },
  "engines": {
    "node": ">=14.x",
    "npm": ">=6.x"
  }
}
